<div class="mb-3">
    <label for="photo-description" class="form-label">Description:</label>
    <input type="text" name="photo-description" id="photo-description" class="form-control">
  </div>

  <div class="mb-3">
    <label for="photo-file" class="form-label">Choose a file</label>
    <input type="file" name="photo-file" id="photo-file" required accept="image/*" class="form-control">
  </div>

  <div class="mb-3">
    <button type="submit" class="btn btn-primary">Upload</button>
  </div>
